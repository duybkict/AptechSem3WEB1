@model List<Product>

@if (Model.Count > 0) {
<table class="table table-bordered">	
	<tbody>
	@foreach (Product product in @Model) { 
		<tr class="shoppingCartItem">
			<td >
				<img src="~/Resources/products/@(product.alias).jpg" class="pull-left"/>
				<span>@product.name</span>
			</td>
			<td style="width: 15%; text-align: center;">
				@if (product.old_price > 0 && product.old_price > product.price) {
					<span class="old-product-price">@String.Format("{0:0.000}", product.old_price) $</span><br />
				}

				<span class="product-price">@String.Format("{0:0.000}", product.price) $</span><br />

				@{var saleRate = Convert.ToInt32((product.old_price - product.price) / product.old_price * 100);}

				@if (saleRate > 0) {
					<span class="product-discount-rate">-@saleRate %</span>
				}
			</td>
			<td style="width: 10%; text-align: center;">
				1
			</td>
			<td style="width:15%;text-align:right;">
				<span class="product-price">@String.Format("{0:0.000}", product.price) $</span>
			</td>
		</tr>
	}
	</tbody>
</table>
} else {
	<center style="margin-top:45px;">You have no item in your shopping cart!</center>
}
